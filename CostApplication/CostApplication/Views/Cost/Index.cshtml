@model IEnumerable<CostApplication.DTO.CostDto>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">List of Expences</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-controller="Cost" asp-action="Create">Create new record</a>
        </div>
    </div>
   @if (Model.Count() > 0)
   {
        <table class="table table-bordered table-striped" style="width: 100%">
            <thead>
                <tr class="text-center">
                    <th>Created on</th>
                    <th>Type of Costs</th>
                    <th>Amount</th>
                    <th>Description</th>
                    <th>Changes</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>                    
                    <td width="20%">@item.Date.ToString("dd/MM/yyyy")</td>
                    <td width="20%">@item.TypeOfCosts</td>
                    <td width="20%">@item.Amount</td>
                    <td width="15%">@item.Description</td>
                    <td width="25%">
                        <div class="w-100 btn-group" role="group">
                            <a asp-controller="Cost" asp-action="Edit" asp-route-Id="@item.Id" class="btn btn-primary mx-1">Edit</a>
                            <a asp-controller="Cost" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-1">Delete</a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>   
   }
   else 
   {
       <p class="text-center mt-5">The list is empty yet!</p>
   }
</div>