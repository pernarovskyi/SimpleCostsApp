@model CostApplication.DTO.CostDto

<form asp-action="Edit" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Update record</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="TypeOfCosts"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Date" class="form-control" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <select asp-for="TypeOfCosts" asp-items="Html.GetEnumSelectList<TypeOfCosts>()" class="form-control">
                            <option value="" class="text-light">--- Select item ---</option>
                        </select>
                        <span asp-validation-for="TypeOfCosts" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Amount" class="form-control" />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Description" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Update" />
                        </div>
                        <div class="col">
                            <a class="btn btn-danger w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>


