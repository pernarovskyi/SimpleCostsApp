@model CostApplication.Models.Cost

<form asp-action="DeleteRecord" method="post">
    <input asp-for="Id" hidden/>
    <div class="border p-3">        
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Delete record from database</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="Date"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="TypeOfCosts"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Amount"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="Description"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input asp-for="Date" disabled class="form-control" />                        
                    </div>
                    <div class="col-3">
                        <input asp-for="TypeOfCosts" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Amount" disabled class="form-control" />
                    </div>
                    <div class="col-3">
                        <input asp-for="Description" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a class="btn btn-success w-75" asp-action="Index">Back</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>


